# 主页面
<MainWidget>:

    id: main_widget
    FloatLayout:
        # 加号按钮
        Button:  
            id: add_button
            # 宽高比例
            size_hint: None,None
            # 大小
            size: 100,100
            # 按钮的坐标位置/相对
            pos_hint: {'x': 0.001, 'y': 0.933}
            # 点击按钮反馈
            on_press: root.click_the_Add_button()
            # 设置按钮背景颜色为白色
            background_color: 0, 0, 0, 0
            # 绘画指令
            canvas:
                Color:
                    rgba: 0, 0, 0, 0.5 # 透明度
                Line:
                    width: 2
                    points: [20, 1545, 84, 1545]  # 横线
                Line:
                    width: 2
                    points: [52, 1575, 52, 1515]  # 竖线

        # 文字标签
        Label:
            id: text_label
            # 宽高比例
            size_hint: None,None
            # 大小
            size: 100,100
            # 标签位置/相对
            pos_hint: {'x': 0.8, 'y': 0.93}
            # 标签文本  
            text: 'Contact'
            # 标签文本颜色
            color: 0, 0, 0, 0.7 # 透明度
            # 加粗
            bold: True
            # 使用文本
            from_name: '/Users/jean/Desktop/python/CommunicationApplication/Font/Body.otf'

        Label:
            id: botton_text
